" Global """""""

:set showmatch
:set hlsearch
:set incsearch
:set tabstop=2
:set softtabstop=4
:set expandtab
:set shiftwidth=2
:set autoindent
:set number
:set relativenumber
:set wildmode=longest,list
:set cc=80
:set mouse=a
:set clipboard=unnamedplus
:set cursorline
:set ttyfast
:set smarttab
:set updatetime=300
:set backupdir=~/.cache/vim
:set nobackup
:set nowritebackup
:set encoding=utf-8
syntax on
filetype plugin on
filetype plugin indent on
